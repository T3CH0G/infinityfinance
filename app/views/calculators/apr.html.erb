<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

<div class="container">
	<div class="row main">
			<div class="col-md-12">
					<div class="main-login main-center">
						<h2>APR Calculator</h2>
						<div class="col-lg-2">
								<%= form_for :apr, url:"apr" do |f| %>
								<div class="form-group">
									<label for="name" class="cols-sm-2 control-label">Balance</label>
									<div class="cols-sm-10">
										<div class="input-group">
											<span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
											<input class="form-control" type="number" name="apr[balance]" id="apr_balance" value=<%=@balance%>>
										</div>
									</div>
								</div>


								<div class="form-group">
									<label for="email" class="cols-sm-2 control-label">Interest Rate Percentage</label>
									<div class="cols-sm-10">
										<div class="input-group">
											<span class="input-group-addon"><i class="fa fa-percent" aria-hidden="true"></i></span>
											<input class="form-control" type="number" name="apr[interest]" id="apr_interest" value=<%=@interest%>>
										</div>
									</div>
								</div>


								<div class="form-group">
									<label for="password" class="cols-sm-2 control-label">Payments</label>
									<div class="cols-sm-10">
										<div class="input-group">
											<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
											<input class="form-control" type="number" name="apr[payment]" id="apr_payment" value=<%=@payment%>>
										</div>
									</div>
								</div>


								<div class="form-group ">
									  <%= f.submit "Calculate!", :class => 'btn btn-primary' %>
									<% end %>
								</div>
						</div>
					</div>
				<%if @balance %>
					<div class="col-lg-10">
						<%=render "graph_apr"%>
					</div>
				<%end%>
	</div>
</div>
</div>