<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

<div class="container">
			<div class="row main">
				<div class="main-login main-center">
				<h2>Investment Calculator</h2>
						<%= form_for :investment_calculator_output, url:"calculators_controller/investment_calculator_output" do |f| %>
						<div class="form-group">
							<label for="name" class="cols-sm-2 control-label">Amount Deposited</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
									<%= f.number_field :deposit, :class =>"form-control" %>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="email" class="cols-sm-2 control-label">Interest Rate Percentage</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-percent" aria-hidden="true"></i></span>
									 <%= f.number_field :interest, :class =>"form-control" %>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="username" class="cols-sm-2 control-label">Frequency</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									  <select class="form-control" name="investment_calculator_output[frequency]"id="investment_calculator_output_frequency">
									    <option>Yearly</option>
									    <option>Monthly</option>
									  </select>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="password" class="cols-sm-2 control-label">Current Age</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									<%= f.number_field :current_age, :class =>"form-control"%>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">Retirement Age</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									<%= f.number_field :retirement_age, :class =>"form-control"%>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">Lump Sum</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
									<%= f.number_field :lumpsum, :class =>"form-control"%>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">Inflation</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-percent" aria-hidden="true"></i></span>
									<%= f.number_field :inflation, :class =>"form-control"%>
								</div>
							</div>
						</div>						

						<div class="form-group ">
							  <%= f.submit "Calculate!", :class => 'btn btn-primary' %>
							<% end %>
						</div>
						
					</form>
				</div>
			</div>
		</div>