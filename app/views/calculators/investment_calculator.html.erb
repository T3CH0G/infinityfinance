<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

<div class="container">
			<div class="row main">
			<div class="col-lg-3">
				<div class="main-login main-center">
				<h2>Investment Calculator</h2>
						<%= form_for :investment_calculator, url:"investment_calculator" do |f| %>
						<div class="form-group">
							<label for="name" class="cols-sm-2 control-label">Amount Deposited</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="investment_calculator[deposit]" id="investment_calculator_deposit" value=<%=@deposit%>>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="email" class="cols-sm-2 control-label">Interest Rate Percentage</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-percent" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="investment_calculator[interest]" id="investment_calculator_interest" value=<%=@interest%>>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="username" class="cols-sm-2 control-label">Frequency</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									  <select class="form-control" name="investment_calculator[frequency]"id="investment_calculator_frequency" value=<%=@frequency%>>
									    <option>Yearly</option>
									    <option>Monthly</option>
									  </select>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="password" class="cols-sm-2 control-label">Current Age</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="investment_calculator[current_age]" id="investment_calculator_current_age" value=<%=@current_age%>>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">Retirement Age</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="investment_calculator[retirement_age]" id="investment_calculator_retirement_age" value=<%=@retirement_age%>>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">Lump Sum</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="investment_calculator[lumpsum]" id="investment_calculator_lumpsum" value=<%=@lumpsum%>>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">Inflation</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-percent" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="investment_calculator[inflation]" id="investment_calculator_inflation" value=<%=@inflation%>>
								</div>
							</div>
						</div>						

						<div class="form-group ">
							  <%= f.submit "Calculate!", :class => 'btn btn-primary' %>
							<% end %>
						</div>
						
					</form>
				</div>
			</div>


<%if @deposit %>
<div class="col-lg-9">
<%=render "graph"%>
</div>
<%end%>
</div>
</div>
