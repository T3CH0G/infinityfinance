<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

<div class="container">
	<div class="row main">
			<div class="col-md-12">
					<div class="main-login main-center">
						<h2>Mortgage Calculator</h2>
						<div class="col-lg-2">
								<%= form_for :mortgage, url:"mortgage" do |f| %>
								<div class="form-group">
									<label for="name" class="cols-sm-2 control-label">Principal Loan Amount</label>
									<div class="cols-sm-10">
										<div class="input-group" data-toggle="tooltip" data-placement="right" title="This is the value of your mortgage that is yet to be paid off.">
											<span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
											<input class="form-control" type="number" name="mortgage[pla]" id="mortgage_pla" value=<%=@pla%>>
										</div>
									</div>
								</div>


								<div class="form-group">
									<label for="email" class="cols-sm-2 control-label">Loan Period</label>
									<div class="cols-sm-10">
										<div class="input-group" data-toggle="tooltip" data-placement="right" title="This is how long until your mortgage is paid off.">
											<span class="input-group-addon"><i class="fa fa-user" aria-hidden="true"></i></span>
											<input class="form-control" type="number" name="mortgage[lp]" id="mortgage_lp" value=<%=@lp%>>
										</div>
									</div>
								</div>

								<div class="form-group">
									<label for="password" class="cols-sm-2 control-label">Annual Interest Rate</label>
									<div class="cols-sm-10">
										<div class="input-group" data-toggle="tooltip" data-placement="right" title="This is how much your mortgage grows by.">
											<span class="input-group-addon"><i class="fa fa-percent" aria-hidden="true"></i></span>
											<input class="form-control" type="number" name="mortgage[air]" id="mortgage_air" value=<%=@air%>>
										</div>
									</div>
								</div>

								<hr>

								<div class="form-group">
									<label for="password" class="cols-sm-2 control-label">Extra Payment Amount</label>
									<div class="cols-sm-10">
										<div class="input-group" data-toggle="tooltip" data-placement="right" title="This is how much extra you’d contribute towards your regular payments.">
											<span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
											<input class="form-control" type="number" name="mortgage[epa]" id="mortgage_epa" value=<%=@epa%>>
										</div>
									</div>
								</div>

								<div class="form-group">
									<label for="password" class="cols-sm-2 control-label">Frequency</label>
									<div class="cols-sm-10">
										<div class="input-group" data-toggle="tooltip" data-placement="right" title="This is how often you’d be contributing extra payments.">
											<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
											<input class="form-control" type="number" name="mortgage[f]" id="mortgage_f" value=<%=@f%>>
										</div>
									</div>
								</div>

								<div class="form-group">
									<label for="password" class="cols-sm-2 control-label">Number of Payments</label>
									<div class="cols-sm-10">
										<div class="input-group" data-toggle="tooltip" data-placement="right" title="This is how many extra payments you will contribute.">
											<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
											<input class="form-control" type="number" name="mortgage[nop]" id="mortgage_nop" value=<%=@nop%>>
										</div>
									</div>
								</div>


								<div class="form-group ">
									  <%= f.submit "Calculate!", :class => 'btn btn-primary' %>
									<% end %>
								</div>
						</div>
					</div>
				<%if @balance || @pla %>
					<div class="col-lg-10">
						<%=render "graph_mortgage"%>
					</div>

				<%else%>
					<div class="col-lg-10">
						<%=render "dummygraph"%>
					</div>
				<%end%>
	</div>
</div>
</div>