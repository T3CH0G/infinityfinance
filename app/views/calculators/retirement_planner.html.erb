<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.1/css/font-awesome.min.css">

<div class="container">
			<div class="row main">
			<div class="col-lg-12">
				<div class="main-login main-center">
				<h2>Retirement Planner</h2>
				<div class="col-lg-2">
						<%= form_for :retirement_planner, url:"retirement_planner" do |f| %>
						<div class="form-group">
							<label for="name" class="cols-sm-2 control-label">Income:</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="retirement_planner[deposit]" id="retirement_planner_deposit" value=<%=@deposit%>>
								</div>
							</div>
						</div>


						<div class="form-group">
							<label for="email" class="cols-sm-2 control-label">Interest Rate Percentage</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-percent" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="retirement_planner[interest]" id="retirement_planner_interest" value=<%=@interest%>>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="username" class="cols-sm-2 control-label">Frequency</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									  <select class="form-control" name="retirement_planner[frequency]" id="retirement_planner_frequency" value='<%=@frequency%>' >
									  <option>Monthly</option>
									    <option>Yearly</option>
									  </select>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="password" class="cols-sm-2 control-label">Current Age</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="retirement_planner[current_age]" id="retirement_planner_current_age" value=<%=@current_age%>>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">Retirement Age</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="retirement_planner[retirement_age]" id="retirement_planner_retirement_age" value=<%=@retirement_age%>>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">Lump Sum</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-usd" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="retirement_planner[lumpsum]" id="retirement_planner_lumpsum" value=<%=@lumpsum%>>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">Inflation</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-percent" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="retirement_planner[inflation]" id="retirement_planner_inflation" value=<%=@inflation%>>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">Length of Retirement</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="retirement_planner[retirement_length]" id="retirement_planner_retirement_length" value=<%=@retirement_length%>>
								</div>
							</div>
						</div>

						<div class="form-group">
							<label for="confirm" class="cols-sm-2 control-label">How much are you currently paying?</label>
							<div class="cols-sm-10">
								<div class="input-group">
									<span class="input-group-addon"><i class="fa fa-user fa" aria-hidden="true"></i></span>
									<input class="form-control" type="number" name="retirement_planner[current_p]" id="retirement_planner_current_p" value=<%=@current_p%>>
								</div>
							</div>
						</div>	
					
						<div class="form-group ">
							  <%= f.submit "Calculate!", :class => 'btn btn-primary' %>
							<% end %>
						</div>
				</div>
			</div>


<%if @deposit %>
<div class="col-lg-10">
<%=render "graph_rp"%>
</div>
<%else%>
<div class="col-lg-10">
<%=render "dummyrp"%>
</div>
<%end%>
</div>
</div>